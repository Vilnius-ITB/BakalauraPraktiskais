<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">

    <TextView
        android:id="@+id/transtactionid_txt"
        android:layout_width="346dp"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="5dp"
        android:layout_marginTop="5dp"
        android:layout_marginEnd="60dp"
        android:fontFamily="serif-monospace"
        android:text="ID"
        android:textSize="16sp" />

    <TextView
        android:id="@+id/transition_status"
        android:layout_width="107dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/transtactionid_txt"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="5dp"
        android:layout_marginTop="5dp"
        android:layout_marginEnd="299dp"
        android:fontFamily="monospace"
        android:text="Status"
        android:textSize="12sp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:layout_below="@id/transition_status"
        android:layout_marginTop="10dp"
        android:background="#DAD8D8" />

    <TextView
        android:id="@+id/transtactionid_amount"
        android:layout_width="109dp"
        android:layout_height="16dp"
        android:layout_below="@+id/transtactionid_txt"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="113dp"
        android:layout_marginTop="5dp"
        android:layout_marginEnd="189dp"
        android:fontFamily="monospace"
        android:text="AMOUNT: X.XX$"
        android:textSize="12sp" />


</RelativeLayout>